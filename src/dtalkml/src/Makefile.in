# Makefile for dtalkml/src/ for Dectalk software for @target@ 

# 001 ETT 10/22/1998 moved to autoconf system. 
# 002 ETT 12/04/1998 added osf 3.2 & 4.0
# 003 ETT 12/07/1998 added SO_LOCATIONS
# 004 MGS 03/29/2001 Fixed location of libraries for linux
# 005 MGS 06/19/2001 Solaris Port BATS#972
#

#### Start of system configuration section. ####  

# where is the standard include dir? (cross compile critical)

# Get the Operating System version
OS_VERSION=@OS_VERSION@
STD_INCLUDE=@STD_INCLUDE@
# which compiler do we use?
CC=@CC@
RANLIB=@RANLIB@
# support for symbolic links?
LN_S=@LN_S@
# to debug or not to debug?
DEBUG_FLAGS=@DEBUG_FLAGS@
# how much optomization do we use?
OPTO_FLAGS=@OPTO_FLAGS@
# how many silly compile warnings do we want?
WARN_FLAGS=@WARN_FLAGS@
# what do we define?
DEFINES=@DEFINES@
OS_VERSION=@OS_VERSION@
LD=@LD@
AR=@AR@
ALL=@ML_ALL@
#where do we put the shared libs?
ML_TTS_SO=@ML_TTS_SO@
ML_TTS_MME_SO=@ML_TTS_MME_SO@
DTALK_ML=@DTALK_ML@
DTALK_ML_MME=@DTALK_ML_MME@
INIT_ML=@INIT_ML@
SO_LOCATIONS=@SO_LOCATIONS@
#### End of system configuration section. #### 

RM=rm -f

CMD_DIR     = ../../dapi/src/cmd
DIC_DIR     = ../../dapi/src/dic
LTS_DIR     = ../../dapi/src/lts
PH_DIR      = ../../dapi/src/ph
INCLUDE_DIR = ../../dapi/src/include
API_DIR     = ../../dapi/src/api
OSF_DIR     = ../../dapi/src/osf
PROTOS_DIR  = ../../dapi/src/protos
NT_DIR      = ../../dapi/src/nt
DECTALKF_H  = ../../

INCLUDES= -I$(INCLUDE_DIR) -I$(API_DIR) -I$(CMD_DIR) -I$(LTS_DIR) \
	     -I$(OSF_DIR) -I$(PH_DIR) -I$(DECTALKF_H)\
             -I$(PROTOS_DIR) -I$(NT_DIR) -I$(STD_INCLUDE) 

CFLAGS= -MMD $(DEBUG_FLAGS) $(OPTO_FLAGS) $(INCLUDES) $(DEFINES)

DTALK_ML_SRC=dtalk_ml.c init.c

DTALK_ML_OBJ=../build/$(OS_VERSION)/$(LANG_CODE)/$(ML_OUT)/link/dtalk_ml.o \
              ../build/$(OS_VERSION)/$(LANG_CODE)/$(ML_OUT)/link/init.o \
            ../build/$(OS_VERSION)/$(LANG_CODE)/$(ML_OUT)/link/dtalk_ml_mme.o

all: $(ALL)
#see ML_ALL above

../build/$(OS_VERSION)/$(LANG_CODE)/$(ML_OUT)/libtts.so:../build/$(OS_VERSION)/$(LANG_CODE)/$(ML_OUT)/link/dtalk_ml.o ../build/$(OS_VERSION)/$(LANG_CODE)/$(ML_OUT)/link/init.o ../build/$(OS_VERSION)/$(LANG_CODE)/$(ML_OUT)/libtts.a
	$(SO_LOCATIONS)
	$(ML_TTS_SO)

../build/$(OS_VERSION)/$(LANG_CODE)/$(ML_OUT)/libtts.dylib:../build/$(OS_VERSION)/$(LANG_CODE)/$(ML_OUT)/link/dtalk_ml.o ../build/$(OS_VERSION)/$(LANG_CODE)/$(ML_OUT)/link/init.o ../build/$(OS_VERSION)/$(LANG_CODE)/$(ML_OUT)/libtts.a
	$(SO_LOCATIONS)
	$(ML_TTS_SO)

../build/$(OS_VERSION)/$(LANG_CODE)/$(ML_OUT)/libttsmme.so:../build/$(OS_VERSION)/$(LANG_CODE)/$(ML_OUT)/link/dtalk_ml_mme.o ../build/$(OS_VERSION)/$(LANG_CODE)/$(ML_OUT)/link/init.o ../build/$(OS_VERSION)/$(LANG_CODE)/$(ML_OUT)/libttsmme.a
	$(SO_LOCATIONS)
	$(ML_TTS_MME_SO)

../build/$(OS_VERSION)/$(LANG_CODE)/$(ML_OUT)/libtts.a:../build/$(OS_VERSION)/$(LANG_CODE)/$(ML_OUT)/link/dtalk_ml.o ../build/$(OS_VERSION)/$(LANG_CODE)/$(ML_OUT)/link/init.o 
	$(RM) $@
	$(AR) $@ $<

../build/$(OS_VERSION)/$(LANG_CODE)/$(ML_OUT)/libttsmme.a:../build/$(OS_VERSION)/$(LANG_CODE)/$(ML_OUT)/link/dtalk_ml_mme.o ../build/$(OS_VERSION)/$(LANG_CODE)/$(ML_OUT)/link/init.o 
	$(RM) $@
	$(AR) $@ $<

../build/$(OS_VERSION)/$(LANG_CODE)/$(ML_OUT)/link/dtalk_ml.o:dtalk_ml.c
	$(DTALK_ML)

../build/$(OS_VERSION)/$(LANG_CODE)/$(ML_OUT)/link/dtalk_ml_mme.o:dtalk_ml.c
	$(DTALK_ML_MME)

../build/$(OS_VERSION)/$(LANG_CODE)/$(ML_OUT)/link/init.o:init.c
	$(INIT_ML)

DEPEND:=$(DTALK_ML_OBJ:.o=.d)
-include $(DEPEND)

clean:
	$(RM) ../build/$(OS_VERSION)/$(LANG_CODE)/$(ML_OUT)/link/*.o ../build/$(OS_VERSION)/$(LANG_CODE)/$(ML_OUT)/link/*.d
	$(RM) ../build/$(OS_VERSION)/$(LANG_CODE)/$(ML_OUT)/lib*
	$(RM) *~
